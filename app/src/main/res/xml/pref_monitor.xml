<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory android:title="@string/pref_header_monitor"/>
    <EditTextPreference
        android:key="dnum"
        android:title="@string/pref_monitor_data_num"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_num_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />


    <EditTextPreference
        android:key="gas_high"
        android:title="@string/pref_monitor_gas_high"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_input_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="humi_high"
        android:title="@string/pref_monitor_humi_high"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_input_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="humi_low"
        android:title="@string/pref_monitor_humi_low"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_input_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="temp_high"
        android:title="@string/pref_monitor_temp_high"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_input_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="temp_low"
        android:title="@string/pref_monitor_temp_low"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_data_input_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="update_time"
        android:title="@string/pref_monitor_update_time"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:summary="@string/pref_monitor_update_time_summary"
        android:inputType="number"
        android:numeric="integer"
        android:singleLine="true"
        android:maxLines="1" />
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->


</PreferenceScreen>