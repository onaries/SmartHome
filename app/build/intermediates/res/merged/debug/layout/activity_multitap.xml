<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
    android:layout_width="match_parent" android:background="#ffffff">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sw.iotproject.MultitabActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:id="@+id/voiceLinearLayout">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView6"
            android:background="@drawable/microphone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:text="@string/voice_recognition_on" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/multitap_1"
            android:id="@+id/textView9"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_on"
            android:id="@+id/button5"
            android:onClick="multitap1_onClicked"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_multitab_on"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_off"
            android:id="@+id/button6"
            android:onClick="multitap4_onClicked"
            android:background="@drawable/btn_multitab_off"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/multitap_2"
            android:id="@+id/textView11"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_on"
            android:id="@+id/button7"
            android:onClick="multitap2_onClicked"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_multitab_on"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_off"
            android:id="@+id/button8"
            android:onClick="multitap5_onClicked"
            android:background="@drawable/btn_multitab_off"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/multitap_3"
            android:id="@+id/textView10"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_on"
            android:id="@+id/button9"
            android:onClick="multitap3_onClicked"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_multitab_on"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_off"
            android:id="@+id/button10"
            android:onClick="multitap6_onClicked"
            android:background="@drawable/btn_multitab_off"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_allon"
            android:id="@+id/button11"
            android:onClick="multitap7_onClicked"
            android:background="@drawable/btn_multitab_all_on"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitap_alloff"
            android:id="@+id/button12"
            android:onClick="multitap8_onClicked"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_multitab_all_off"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름을 변경하시려면 이름을 눌러주세요 "
            android:id="@+id/textView12"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</LinearLayout>
</ScrollView>